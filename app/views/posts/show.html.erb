
<div class="container ">
<div class="row">
    <div class="col-md-6 offset-md-3">
<% if user_signed_in?%>
<%= link_to "編集", edit_post_path(@post.id), method: :get, class: "btn btn-outline-secondary btn-block" %>
<%= link_to "削除", post_path(@post.id), method: :delete, class: "btn btn-outline-secondary btn-block" %>
<% end %>
<br>
<br>

  <div class="card text-center">
    <%= image_tag @post.image, size: "200x500", class: "card-img-top" %>
        <h4 class="card-text"><%= @post.title %></h4>
        <p class="card-text"><%= @post.text %></p>
          <%= link_to "トップページ", root_path, method: :get, class: "b  btn-outline-secondary btn-block" %>
        </div>
        <br>
        <br>
        <div class="row">
        <div class="col">
        <% if current_user %>
            <%= form_with(model: [@post, @comment], local: true) do |form| %>
              <%= form.text_area :text, placeholder: "コメント", rows: "2" %>
              <%= form.submit "SEND" %> <% end %>
            <% else %>
            <strong><p>※※※ コメントするにはログインしてください ※※※</p></strong>
          <% end %> </div>
        </div>
          <div class="comments">
    <h4>コメント一覧</h4> <% if @comments %>
    <% @comments.each do |comment| %> <p>
    <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %></strong>
    <%= comment.text %> </p>
    <% end %>
    <% end %>
    </div>
        <br>
        <br>
      
    </div>
  </div>
  </div>
